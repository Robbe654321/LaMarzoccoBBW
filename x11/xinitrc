#!/bin/sh
# Minimal X session to run the Tkinter dashboard on a bare X server

# Power management/screensaver off
xset -dpms
xset s off

# Lightweight window manager without decorations/cursor
matchbox-window-manager -use_titlebar no -use_cursor no &

# Launch the dashboard via the repo launcher
exec /opt/LaMarzoccoBBW/run-dashboard.sh

